@model ProductGetVM

<div class="container">
	<div class="row g-4">


		<div class="col-12 col-sm-6 col-md-4 col-lg-3">
			<div class="card h-100">

				<!-- Image -->
				<img src="~/assets/images/website-images/@Model.MainImagePath"
					 class="card-img-top" alt="Card image cap">
				<img src="~/assets/images/website-images/@Model.HoverImagePath"
					 class="card-img-top" alt="Card image cap">

				<div class="card-body d-flex flex-column">
					<span class="badge bg-primary mb-2">
						@Model.CategoryName
					</span>
					<span class="badge bg-primary mb-2">
						@foreach(var tagName in Model.TagNames)
						{
							<span>@tagName</span>
						}
					</span>

					<h5 class="card-title">
						@Model.Name
					</h5>

					<p class="card-text small text-muted">
						@(Model.Description.Length > 70
												? Model.Description.Substring(0, 70) + "..."
												: Model.Description)
					</p>

					<h6 class="fw-bold text-success mt-auto">
						@Model.Price $
					</h6>
				</div>

				<div class="card-footer bg-white border-0 text-center">
					<a asp-controller="Product"
					   asp-action="Detail"
					   asp-route-id="@Model.Id"
					   class="btn btn-sm btn-outline-primary w-100">
						Ətraflı bax
					</a>
				</div>
			</div>
		</div>

	</div>
</div>
